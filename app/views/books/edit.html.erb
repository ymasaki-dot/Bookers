<h3 class="form-heading">Editing Book</h3>

<%= form_with model:@book, local:true do |f| %>

    <% if @book.errors.any? %>
        <ul>
            <li><%= @book.errors.count %>errors prohibited this book from being saved:</li>
            <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>
<div class="form-book">
    <div class="form-title">
      <p>Title</p>
      <p class="text_field"><%= f.text_field :title %></p>
    </div>
    <div class="text-body">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <p><%= f.submit "Update Book", class:'submit' %></p>
  </div>
<% end %>

<p class="edit-link-box"><%= link_to "Show", book_path(@book.id), class:"show-edit-link" %> | <%= link_to "Back",books_path,class:"show-edit-link" %></p>
