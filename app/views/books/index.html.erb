<p id="notice"><%= notice %></p>
<h3 class="index-heading">Books</h3>
<table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="table-title"><%= book.title %></td>
        <td class="table-body"><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id), class:"index-link" %> </td>
        <td><%= link_to "Edit", edit_book_path(book.id), class:"index-link" %> </td>
        <td> <%= link_to "Destroy", book_path(book.id), class:"index-link", method: :delete, "data-confirm" => "Are you sure?" %> </td>
      </tr>
    <% end %>
    </tbody>
</table>

<h3 class="form-heading">New book</h3>

<%= form_with model:@book, local:true do |f| %>

    <% if @book.errors.any? %>
        <ul>
            <li><%= @book.errors.count %>errors prohibited this book from being saved:</li>
            <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>
<div class="form-book">
    <div class="form-title">
      <p>Title</p>
      <p class="text_field"><%= f.text_field :title %></p>
    </div>
    <div class="text-body">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <p><%= f.submit "Create Book", class:'submit' %></p>
  </div>
<% end %>